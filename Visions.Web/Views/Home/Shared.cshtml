@model IEnumerable<Visions.Web.Models.PhotoViewModel>
@{
    ViewBag.Title = "Shared dashboard";
}
<h2>@ViewBag.Title</h2>

@if (this.Model.Count() > 0)
{
    <table class="table">
        <tbody>
            @foreach (var photo in Model)
            {
                <tr>
                    <td>
                        <img src="@photo.Path" class="center-block" />
                        @foreach (var tag in photo.Tags)
                        {
                            <a class="alert-info" onclick="location.href='@Url.Action("Sort", "Home", new { tag.Text })'">#@tag.Text</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
