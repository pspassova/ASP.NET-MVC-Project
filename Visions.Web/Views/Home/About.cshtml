@{
    ViewBag.Title = Constants.AboutPageTitle;
}

@Styles.Render("~/Content/Site.css")

<h2>@ViewBag.Title</h2>
<br />

<p>
    <h1>@Constants.AboutPageMainText</h1>
    <h4>@Constants.AboutPageSecondaryText</h4>
</p>
<div class="section">
    <div class="page-header"></div>
    <div class="text-right">
        <dl>
            <dt>@Constants.FoundedByLabel</dt>
            <dd>@Constants.FoundedByText</dd>
            <dt>@Constants.FounderLabel</dt>
            <dd>@Constants.FounderText</dd>
        </dl>
    </div>
</div>

<div class="col-sm-10 top-margin">
    <div class="btn btn-post-article text-uppercase">
        @Html.ActionLink(Constants.BackToHomepageMessage, "Index", "Home")
    </div>
</div>
