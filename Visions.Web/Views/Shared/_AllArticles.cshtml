@model IEnumerable<ArticleViewModel>

@if (this.Model.Count() > 0)
{
    <table class="table">
        <tbody>
            @foreach (var article in this.Model)
            {
                <tr>
                    <td>
                        <label for="content" class="text-uppercase">@article.Title</label>
                        <p class="text-lowercase">@article.Content</p>
                        <a href="#" class="text-lowercase">@article.CreatedOn</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

