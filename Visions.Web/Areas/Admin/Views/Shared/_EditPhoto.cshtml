@model Visions.Web.Models.PhotoViewModel

@{
    ViewBag.Title = Resources.Constants.EditPhotoTitle;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<hr />

<div class="form-horizontal well-lg col-lg-offset-3">

    @using (Html.BeginForm())
    {
        <h2 class="col-lg-offset-7">@this.ViewBag.Title</h2>

        if (this.TempData["Success"] != null)
        {
            <div class="text-uppercase col-sm-offset-8">
                <p>@this.TempData["Success"].ToString()</p>
            </div>
        }

        @Html.AntiForgeryToken()

        @Html.HiddenFor(model => model.Id)

        <div class="well-lg">
            <div class="form-group">
                @Html.LabelFor(model => model.Path, htmlAttributes: new
           {
               @class = "control-label col-md-2 text-primary"
           })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Path, new
               {
                   htmlAttributes = new
                   {
                       @class = "form-control"
                   }
               })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CreatedOn, htmlAttributes: new
           {
               @class = "control-label col-md-2"
           })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.CreatedOn, new
               {
                   htmlAttributes = new
                   {
                       @class = "form-control text-primary"
                   }
               })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2 text-primary">@Resources.Constants.LabelForImage</label>
                <div class="col-md-10">
                    <img src="@this.Model.Path" class="col-xs-11" />
                </div>
            </div>
        </div>

        <div class="col-xs-offset-7">
            <input type="submit" value=@Resources.Constants.EditSaveButtonText class="btn btn-post-article text-uppercase text-primary" /> |
            @Html.ActionLink(Resources.Constants.BackToListMessage, "Manage", new
       {
       }, new
       {
           @class = "btn btn-post-article text-uppercase"
       })
        </div>
    }
</div>